{
  "manifest_version": 2,
  "name": "SearchGoggles",
  "version": "1.0.0",
  "description": "Put on your search goggles - keyboard shortcuts to narrow your search results",
  "author": "timbeccue",
  "homepage_url": "https://timbeccue.github.io/searchgoggles/",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.google.*/search*",
        "*://google.*/search*",
        "*://www.bing.com/search*",
        "*://duckduckgo.com/*",
        "*://search.yahoo.com/search*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "SearchGoggles",
    "default_popup": "popup/popup.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "searchgoggles@timbeccue",
      "strict_min_version": "57.0"
    }
  }
}
